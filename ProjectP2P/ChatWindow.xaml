<Window x:Name="WpfChat" x:Class="ProjectP2P.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectP2P"
        mc:Ignorable="d"
        Title="Chat" Height="326.515" Width="541.667" Icon="pictures/chat.ico" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen" Closed="WpfChat_Closed">
    <Grid>
        <TextBox x:Name="txbChat" HorizontalAlignment="Left" Height="218" Margin="10,10,0,0" TextWrapping="Wrap" Text="(text)" VerticalAlignment="Top" Width="515" IsReadOnly="True"/>
        <TextBox x:Name="txbEingabe" HorizontalAlignment="Left" Height="23" Margin="11,259,0,0" TextWrapping="Wrap" Text="(eingabe)" VerticalAlignment="Top" Width="388" KeyDown="txbEingabe_KeyDown"/>
        <Label x:Name="label" Content="Eingabe:" HorizontalAlignment="Left" Margin="10,233,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnSend" Content="Senden" HorizontalAlignment="Left" Margin="437,259,0,0" VerticalAlignment="Top" Width="75" Click="btnSend_Click"/>
    </Grid>
</Window>
